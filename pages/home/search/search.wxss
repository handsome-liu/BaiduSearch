/* pages/home/search/search.wxss */

.bg {
  position: absolute;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  filter: blur(50rpx);
}

.container {
  color: #fff;
}

.container .title {
  padding-top: 200rpx;
  font-size: 30px;
  text-align: center;
}

.container .title image, .container .title text {
  vertical-align: middle;
}

.container .title image {
  margin-right: 40rpx;
  margin-left: -40rpx;
  width: 60rpx;
  height: 60rpx;
}

.container .form {
  position: relative;
  display: block;
  margin-top: 25px;
}

.container .form input {
  margin: 0 100rpx;
  height: 66rpx;
  text-indent: 40rpx;
  border: 1px solid #fff;
  border-radius: 6px;
}

.container .form button {
  position: absolute;
  top: 2px;
  right: 100rpx;
  /*  模拟器层级和真机不同,至少设置2以上 */
  z-index: 2;
  width: 64rpx;
  height: 64rpx;
  background: transparent;
}

.container .form button image {
  width: 64rpx;
  height: 64rpx;
}

.container .hot {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 30rpx;
  padding: 0 100rpx;
  text-align: center;
}

.container .hot navigator {
  flex-basis: 30%;
  margin: 10rpx 0;
  font-size: 16px;
}
